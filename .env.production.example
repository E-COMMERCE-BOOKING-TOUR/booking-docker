APP_ENV=production
APP_TIMEZONE=Asia/Ho_Chi_Minh
BCRYPT_ROUNDS=10

# --- PUBLIC ACCESS (NGINX) ---
NGINX_PORT=80
NEXT_PUBLIC_APP_URL=http://localhost      
NEXT_PUBLIC_API_URL=http://localhost/api/v1

# --- DATABASE ---
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_strong_password
DB_DATABASE=your_db_name

# --- MONGODB (SOCIAL/CHATBOX/RECOMMEND) ---
MONGODB_URI=mongodb://mongo:27017/your_mongo_db

# --- CACHE (REDIS) ---
REDIS_HOST=redis
REDIS_PORT=6379

# --- SECURITY & AUTH ---
JWT_SECRET_PRIVATEKEY=your_very_long_random_jwt_secret
JWT_REFRESH_TOKEN_SECRET=your_very_long_random_refresh_secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_TOKEN_EXPIRES_IN=7d
AUTH_SECRET=your_next_auth_secret # Run `openssl rand -base64 32`

# --- INTERNAL API ACCESS (FRONTEND SSR) ---
API_BACKEND_CONTAINER=http://backend:3000/api/v1

# --- MICROSERVICES CONFIG ---

# 1. Backend Service
APP_PORT=3000

# 2. Social Network Service
SOCIAL_HOST=social-network
SOCIAL_PORT=3001

# 3. Chatbox Service
CHATBOX_HOST=chatbox
CHATBOX_PORT=3002
CHATBOX_TCP_PORT=3003

# 4. Recommend Service
RECOMMEND_HOST=recommend-service
RECOMMEND_PORT=8865
RECOMMEND_TCP_PORT=8866

# 5. AI Service
AI_HOST=python-ai-service
AI_PORT=8000

# --- THIRD-PARTY INTEGRATIONS ---
STRIPE_SECRET_KEY=sk_live_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
MAILER_DSN=smtp://user:pass@smtp.example.com:587
NEXT_PUBLIC_CHATBOX_WS_URL=ws://localhost/socket.io
