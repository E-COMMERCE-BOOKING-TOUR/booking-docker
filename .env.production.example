# ==============================================
# Production Environment Variables Template
# Copy this file to .env.production and fill values
# ==============================================

# Application
APP_ENV=production
APP_TIMEZONE=Asia/Ho_Chi_Minh
APP_PORT=3000

# Database - MySQL
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_secure_password_here
DB_DATABASE=booking_tour

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# MongoDB (for social-network and chatbox)
MONGODB_URI=mongodb://mongo:27017/social_network

# JWT Configuration
JWT_SECRET_PRIVATEKEY=your_jwt_secret_key_here_minimum_32_chars
JWT_REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# Microservices
ARTICLE_SERVICE_HOST=social-network
ARTICLE_SERVICE_PORT=3001
CHATBOX_HOST=chatbox
CHATBOX_PORT=3002
CHATBOX_TCP_PORT=3003

# External Services - Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# External Services - Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email - SMTP
MAILER_DSN=smtp://user:pass@smtp.example.com:587

# Frontend URLs (change to your actual domain)
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_APP_URL=https://yourdomain.com
API_BACKEND_CONTAINER=http://backend:3000
NEXT_PUBLIC_CHATBOX_WS_URL=wss://yourdomain.com

# Auth (Generate with: openssl rand -base64 32)
AUTH_SECRET=your_auth_secret_here_generate_with_openssl
